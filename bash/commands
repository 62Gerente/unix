#!/bin/bash

mkcd() {
    if [ $# != 1  ]; then
        echo "Usage: mkcd <dir>"
    else
        mkdir -p $1 && cd $1
    fi
}

cl()
{
    last_dir="$(ls -Frt | grep '/$' | tail -n1)"
    if [ -d "$last_dir"  ]; then
        cd "$last_dir"
    fi
}

extract () 
{ # extract files. Ignore files with improper extensions.
    local x
    ee() { # echo and execute
            echo "$@"
            $1 "$2"
        }
    for x in "$@"; do
        [[ -f $x  ]] || continue
        case "$x" in
            *.tar.bz2 | *.tbz2 )    ee "tar xvjf" "$x"   ;;
            *.tar.gz | *.tgz )      ee "tar xvzf" "$x"   ;;
            *.bz2 )                 ee "bunzip2" "$x"    ;;
            *.rar )                 ee "unrar x" "$x"    ;;
            *.gz )                  ee "gunzip" "$x"     ;;
            *.tar )                 ee "tar xvf" "$x"    ;;
            *.zip )                 ee "unzip" "$x"      ;;
            *.Z )                   ee "uncompress" "$x" ;;
            *.7z )                  ee "7z x" "$x"       ;;
        esac
    done
}